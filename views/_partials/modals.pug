div#groupModal.modal.fade(tabindex="-1" aria-modal="true" role="dialog")
    div.modal-dialog.modal-dialog-scrollable.modal-xl(role="document")
        div.modal-content
            div.modal-header
                h4#groupModalTitle.modal-title
                button.close(type="button" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") ×
            div#groupModalBody.modal-body 
                form#groupModalAdd.form-horizontal(style="margin-bottom:40px;")
                    h5(style="margin-bottom:20px;") Add New Member
                    div.form-group
                        label.col-sm-2.control-label(style="padding-left:30px;") E-Mail of the User
                            span
                                a(data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Please enter e-mail address of the user and press add button.")
                                    i.cil-user
                        div.col-sm-8
                            input#joinmodal_email.form-control(type="email")
                        div.col-sm-2
                            button#joinmodal_adduser.btn.btn-primary(type="button") Add User
                                i.cil-user
                h5(style="margin-bottom:10px;") Group Members
                table#groupmembertable.table.table-striped.table-bordered(cellspacing="0" width="100%")
                    thead
                        tr
                            th Name
                            th Username
                            th E-mail
                            th Options
            div.modal-footer    
                button.btn.btn-secondary(type="button" data-dismiss="modal") OK